{
  "manifest_version": 3,
  "name": "bilibiliVoiceAssistant",
  "version": "1.0.0",
  "description": "B站语音助手",

  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "img/logo.png",
      "32": "img/logo.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/*",
        "https://search.bilibili.com/*"
      ],
      "js": ["pinyin.js", "content.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": ["storage", "activeTab", "scripting"]
}
